<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- name代表的是实体类名   talbe代表的是表名 -->
  <class name="cn.itcast.domain.Customer" table="customer">
	<!-- name=id 代表的是customer类中属性  
	     column=id 代表的是table表中的字段 -->
	<id ==========？========> 
		<generator class="native"/><!-- 主键生成策略 -->
	</id>
   	<!-- 其它属性使用property标签来映射 -->
	<property name="name" column="" type="" />
	<property name="age" column="" type="" />  
	<property name="sex" column="" type=""/>
	<property name="city" column="" type=""/>
   </class>
</hibernate-mapping> 